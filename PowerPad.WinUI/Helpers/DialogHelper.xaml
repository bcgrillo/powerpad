<ContentDialog
    x:Class="PowerPad.WinUI.Dialogs.DialogHelper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ContentDialog"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    Style="{ThemeResource DefaultContentDialogStyle}">
    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <FontIcon x:Name="Icon" Visibility="Collapsed" FontSize="36" Margin="0,0,16,0"/>
            <TextBlock x:Name="Message" Margin="0,16,0,16"/>
        </StackPanel>
        <TextBox x:Name="TextBox" Text="" KeyDown="TextBox_KeyDown" Visibility="Collapsed" />
    </StackPanel>
</ContentDialog>
