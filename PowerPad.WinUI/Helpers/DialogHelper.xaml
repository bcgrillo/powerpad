<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="PowerPad.WinUI.Dialogs.DialogHelper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ContentDialog"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    Style="{ThemeResource DefaultContentDialogStyle}">
    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid HorizontalAlignment="Stretch" Margin="0,16,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <FontIcon x:Name="Icon" Visibility="Collapsed" VerticalAlignment="Top" FontSize="28" Margin="0,0,16,0"/>
            <TextBlock x:Name="Message" Grid.Column="1" VerticalAlignment="Center" TextWrapping="Wrap" HorizontalAlignment="Stretch">Parece que Ollama no est� instalado en su equipo.<LineBreak/>�Quiere descargarlo e instalarlo ahora?</TextBlock>
        </Grid>
        <TextBox x:Name="TextBox" Text="" KeyDown="TextBox_KeyDown" Visibility="Collapsed" />
    </StackPanel>
</ContentDialog>
