<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="PowerPad.WinUI.Components.WorkspaceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PowerPad.WinUI.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vmfilesystem="using:PowerPad.WinUI.ViewModels.FileSystem"
    xmlns:controls="using:PowerPad.WinUI.Components.Controls"
    xmlns:converters="using:PowerPad.WinUI.Converters"
    xmlns:l="using:WinUI3Localizer"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="SplitButton" x:Key="AccentSplitButtonStyle" BasedOn="{StaticResource SplitButtonRevealStyle}">
            <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}" />
            <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}" />
            <Setter Property="BackgroundSizing" Value="OuterBorderEdge" />
            <Setter Property="BorderBrush" Value="{ThemeResource AccentButtonBorderBrush}" />
            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        </Style>
        <converters:BooleanToFontWeightConverter x:Key="BooleanToFontWeightConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Style="{StaticResource WSTitleStyle}"
                l:Uids.Uid="WorkspaceTitle" />
            <DropDownButton
                x:Name="OpenWorkspaceBtn"
                Grid.Column="1"
                Height="30"
                l:Uids.Uid="OpenWorkspaceBtn"
                Margin="10,0,6,0"
                Background="Transparent"
                BorderThickness="0"
                Canvas.ZIndex="1"
                IsHitTestVisible="True">
                <DropDownButton.Content>
                    <FontIcon FontSize="16" Glyph="&#xE838;"/>
                </DropDownButton.Content>
                <DropDownButton.Flyout>
                    <MenuFlyout x:Name="WorkspaceMenu" Placement="BottomEdgeAlignedLeft">
                        <MenuFlyoutItem l:Uids.Uid="OpenFolderFlyoutItem" Click="OpenFolderFlyoutItem_Click"/>
                        <MenuFlyoutSeparator/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
        </Grid>
        <ScrollViewer Width="260" Grid.Row="1" VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" HorizontalScrollMode="Auto">
            <TreeView 
                Name="TreeView" 
                ItemsSource="{x:Bind _workspace.Root.Children, Mode=OneWay}" 
                ItemInvoked="TreeView_ItemInvoked"
                CanDrag="False"
                CanReorderItems="True"
                DragItemsCompleted="TreeView_DragItemsCompleted"
                Loaded="TreeView_Loaded"
                KeyDown="TreeView_KeyDown"
                PointerPressed="TreeView_PointerPressed"
                SelectionChanged="TreeView_SelectionChanged">
                <TreeView.ItemTemplate>
                    <DataTemplate x:DataType="vmfilesystem:FolderEntryViewModel">
                        <TreeViewItem 
                            ItemsSource="{x:Bind Children, Mode=OneWay}" 
                            Padding="0,0,8,0"
                            AllowDrop="{x:Bind IsFolder}"
                            IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                            IsSelected="{x:Bind IsSelected, Mode=TwoWay}"
                            ToolTipService.ToolTip="{x:Bind Name, Mode=OneWay}"
                            ExpandedGlyph="{x:Null}" CollapsedGlyph="{x:Null}">
                            <Grid ColumnSpacing="4" Margin="-24,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="{x:Bind Glyph, Mode=OneWay}" FontSize="16" Margin="0,1,0,0" />
                                <TextBlock 
                                    Grid.Column="1" 
                                    Margin="6,1,0,-1" 
                                    Text="{x:Bind Name, Mode=OneWay}" 
                                    FontWeight="{x:Bind IsFolder, Converter={StaticResource BooleanToFontWeightConverter}}"
                                    TextTrimming="CharacterEllipsis" />
                                <Button 
                                    Grid.Column="2"
                                    Padding="2,0"
                                    Height="18"
                                    Visibility="{x:Bind IsSelected, Mode=OneWay}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="0,1,0,0"
                                    l:Uids.Uid="MoreOptionsBtn"
                                    Click="MoreButton_Click">
                                    <FontIcon Glyph="&#xE712;" />
                                </Button>
                            </Grid>
                            <TreeViewItem.ContextFlyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem l:Uids.Uid="RenameFlyoutItem" Click="RenameFlyoutItem_Click"/>
                                    <MenuFlyoutItem l:Uids.Uid="DeleteFlyoutItem" Click="DeleteFlyoutItem_Click"/>
                                </MenuFlyout>
                            </TreeViewItem.ContextFlyout>
                        </TreeViewItem>
                    </DataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </ScrollViewer>
        <Grid Grid.Row="2" Margin="4,8,4,4" ColumnSpacing="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button 
                x:Name="NewChatButton"
                Height="36"
                MaxWidth="150"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                Click="NewChatButton_Click"
                l:Uids.Uid="NewChatButton">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon FontSize="16" Glyph="&#xE710;" />
                    <FontIcon FontSize="16" Glyph="&#xE8BD;" />
                </StackPanel>
            </Button>
            <Button 
                x:Name="NewNoteButton"
                Grid.Column="1"
                Height="36"
                MaxWidth="150"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                Click="NewNoteButton_Click"
                l:Uids.Uid="NewNoteButton">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon FontSize="16" Glyph="&#xE710;" />
                    <FontIcon FontSize="16" Glyph="&#xE70B;" />
                </StackPanel>
            </Button>
            <Button 
                x:Name="NewFolderButton"
                Grid.Column="2"
                Height="36"
                MaxWidth="150"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                Click="NewFolderButton_Click"
                l:Uids.Uid="NewFolderButton">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon FontSize="16" Glyph="&#xE710;" />
                    <FontIcon FontSize="16" Glyph="&#xE8B7;" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
