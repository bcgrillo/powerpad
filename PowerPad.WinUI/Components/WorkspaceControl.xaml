<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="PowerPad.WinUI.Components.WorkspaceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PowerPad.WinUI.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fs="using:PowerPad.WinUI.ViewModels.FileSystem"
    xmlns:converters="using:PowerPad.WinUI.Converters"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="SplitButton" x:Key="AccentSplitButtonStyle" BasedOn="{StaticResource SplitButtonRevealStyle}">
            <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}" />
            <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}" />
            <Setter Property="BackgroundSizing" Value="OuterBorderEdge" />
            <Setter Property="BorderBrush" Value="{ThemeResource AccentButtonBorderBrush}" />
            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        </Style>
        <converters:NullOrEmptyToCollapsedConverter x:Key="NullOrEmptyToCollapsedConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Style="{StaticResource WSTitleStyle}"
                Text="Workspace"
                TextTrimming="CharacterEllipsis"
                TextWrapping="NoWrap"/>
            <DropDownButton
                x:Name="OpenWorkspaceBtn"
                Grid.Column="1"
                Height="30"
                ToolTipService.ToolTip="Cambiar Workspace"
                Margin="10,0,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Canvas.ZIndex="1"
                IsHitTestVisible="True">
                <DropDownButton.Content>
                    <FontIcon FontSize="16" Glyph="&#xE838;"/>
                </DropDownButton.Content>
                <DropDownButton.Flyout>
                    <MenuFlyout x:Name="WorkspaceMenu" Placement="BottomEdgeAlignedLeft">
                        <MenuFlyoutItem Text="Seleccionar carpeta..." Click="OpenFolderFlyoutItem_Click"/>
                        <MenuFlyoutSeparator/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <Button
                x:Name="HideMenuBtn"
                Grid.Column="2"
                Height="30"
                Width="30"
                ToolTipService.ToolTip="Ocultar menu"
                Margin="0,0,10,0"
                Padding="0"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="HideMenuBtn_Click"
                Canvas.ZIndex="1"
                IsHitTestVisible="True">
                <Button.Content>
                    <FontIcon FontSize="16" Glyph="&#xE973;"/>
                </Button.Content>
            </Button>
        </Grid>
        <ScrollViewer Width="260" Grid.Row="1" VerticalScrollMode="Auto" HorizontalScrollMode="Auto">
            <TreeView 
                Name="TreeView" 
                ItemsSource="{x:Bind _workspace.Root.Children, Mode=OneWay}" 
                ItemInvoked="TreeView_ItemInvoked"
                CanDrag="True"
                CanReorderItems="True"
                DragItemsCompleted="TreeView_DragItemsCompleted"
                Loaded="TreeView_Loaded"
                KeyDown="TreeView_KeyDown"
                PointerPressed="TreeView_PointerPressed">
                <TreeView.ItemTemplate>
                    <DataTemplate x:DataType="fs:FolderEntryViewModel">
                        <TreeViewItem 
                            ItemsSource="{x:Bind Children, Mode=OneWay}" 
                            Padding="0,0,8,0"
                            AllowDrop="{x:Bind IsFolder}"
                            IsExpanded="{x:Bind IsExpanded, Mode=TwoWay}"
                            IsSelected="{x:Bind IsSelected, Mode=TwoWay}">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Glyph="{x:Bind Glyph}" FontSize="16" Margin="-22,2,10,0" Visibility="{x:Bind Glyph, Converter={StaticResource NullOrEmptyToCollapsedConverter}}"/>
                                <TextBlock Margin="0,1,8,-1" Text="{x:Bind Name, Mode=OneWay}"/>
                            </StackPanel>
                            <TreeViewItem.ContextFlyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem Text="Renombrar" Click="RenameFlyoutItem_Click"/>
                                    <MenuFlyoutItem Text="Eliminar" Click="DeleteFlyoutItem_Click"/>
                                </MenuFlyout>
                            </TreeViewItem.ContextFlyout>
                        </TreeViewItem>
                    </DataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </ScrollViewer>
        <Grid Grid.Row="2" Margin="4,8,4,4" ColumnSpacing="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button 
                x:Name="NewChatButton"
                Height="36"
                MaxWidth="150"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                Click="NewChatButton_Click"
                ToolTipService.ToolTip="Nuevo chat">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon FontSize="16" Glyph="&#xE710;" />
                    <FontIcon FontSize="16" Glyph="&#xE8BD;" />
                </StackPanel>
            </Button>
            <Button 
                x:Name="NewNoteButton"
                Grid.Column="1"
                Height="36"
                MaxWidth="150"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                Click="NewNoteButton_Click"
                ToolTipService.ToolTip="Nueva nota">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon FontSize="16" Glyph="&#xE710;" />
                    <FontIcon FontSize="16" Glyph="&#xE70B;" />
                </StackPanel>
            </Button>
            <Button 
                x:Name="NewFolderButton"
                Grid.Column="2"
                Height="36"
                MaxWidth="150"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                Click="NewFolderButton_Click"
                ToolTipService.ToolTip="Nueva carpeta">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <FontIcon FontSize="16" Glyph="&#xE710;" />
                    <FontIcon FontSize="16" Glyph="&#xE8B7;" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</UserControl>
