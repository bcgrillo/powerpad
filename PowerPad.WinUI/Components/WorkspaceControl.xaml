<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="PowerPad.WinUI.Components.WorkspaceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PowerPad.WinUI.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:PowerPad.WinUI.ViewModels"
    xmlns:converters="using:PowerPad.WinUI.Converters"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="WSTitleStyle" BasedOn="{StaticResource TitleTextBlockStyle}">
            <Setter Property="FontSize" Value="22" />
        </Style>
        <Style TargetType="SplitButton" x:Key="AccentSplitButtonStyle" BasedOn="{StaticResource SplitButtonRevealStyle}">
            <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}" />
            <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}" />
            <Setter Property="BackgroundSizing" Value="OuterBorderEdge" />
            <Setter Property="BorderBrush" Value="{ThemeResource AccentButtonBorderBrush}" />
            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
        </Style>
        <converters:NullOrEmptyToCollapsedConverter x:Key="NullOrEmptyToCollapsedConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Style="{StaticResource WSTitleStyle}"
                Text="Workspace"
                TextTrimming="CharacterEllipsis"
                TextWrapping="NoWrap"
                Margin="16,8,16,4"/>
            <DropDownButton
                x:Name="OpenWorkspaceBtn"
                Grid.Column="1"
                Height="30"
                ToolTipService.ToolTip="Cambiar Workspace"
                Margin="10,0,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Canvas.ZIndex="1"
                IsHitTestVisible="True">
                <DropDownButton.Content>
                    <FontIcon FontSize="16" Glyph="&#xE838;"/>
                </DropDownButton.Content>
                <DropDownButton.Flyout>
                    <MenuFlyout x:Name="WorkspaceMenu" Placement="BottomEdgeAlignedLeft">
                        <MenuFlyoutItem Text="Seleccionar carpeta..." Click="AbrirCarpetaFlyoutItem_Click"/>
                        <MenuFlyoutSeparator/>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>
            <Button
                x:Name="HideMenuBtn"
                Grid.Column="2"
                Height="30"
                Width="30"
                ToolTipService.ToolTip="Ocultar Workspace"
                Margin="0,0,10,0"
                Padding="0"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="HideMenuBtn_Click"
                Canvas.ZIndex="1"
                IsHitTestVisible="True">
                <Button.Content>
                    <FontIcon FontSize="16" Glyph="&#xE973;"/>
                </Button.Content>
            </Button>
        </Grid>
        <TreeView 
            Name="TreeView" 
            Grid.Row="1"
            ItemsSource="{x:Bind _workspace.Root.Children, Mode=OneWay}" 
            ItemInvoked="TreeView_ItemInvoked"
            CanDrag="True"
            CanReorderItems="True"
            DragItemsCompleted="TreeView_DragItemsCompleted">
            <TreeView.ItemTemplate>
                <DataTemplate x:DataType="vm:FolderEntryViewModel">
                    <TreeViewItem 
                        ItemsSource="{x:Bind Children, Mode=OneWay}" 
                        Padding="0,0,8,0"
                        AllowDrop="{x:Bind IsFolder}">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon Glyph="{x:Bind Glyph}" Margin="-22,0,10,0" Visibility="{x:Bind Glyph, Converter={StaticResource NullOrEmptyToCollapsedConverter}}"/>
                            <TextBlock Margin="0,1,8,-1" Text="{x:Bind Name, Mode=OneWay}"/>
                        </StackPanel>
                        <TreeViewItem.ContextFlyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Renombrar" Click="RenameFlyoutItem_Click"/>
                                <MenuFlyoutItem Text="Eliminar" Click="DeleteFlyoutItem_Click"/>
                            </MenuFlyout>
                        </TreeViewItem.ContextFlyout>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <Grid Grid.Row="2" Margin="4,8,4,4">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Button 
                x:Name="NewChatButton"
                Height="36"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                Click="NewChatButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontSize="16" Glyph="&#xE710;" />
                    <TextBlock Text="Nuevo chat" />
                </StackPanel>
            </Button>
            <SplitButton 
                x:Name="NewSplitButton"
                Grid.Row="1" 
                Margin="0,4,0,0"
                Height="36"
                HorizontalAlignment="Stretch"
                BorderThickness="0"
                Click="NewSplitButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontSize="16" Glyph="&#xE710;" />
                    <TextBlock Text="Nueva nota" />
                </StackPanel>
                <SplitButton.Flyout>
                    <MenuFlyout Placement="Full">
                        <MenuFlyoutItem Text="Nuevo markdown" Click="MenuFlyoutItem_Click">
                            <MenuFlyoutItem.Tag>
                                <vm:DocumentTypes>Markdown</vm:DocumentTypes>
                            </MenuFlyoutItem.Tag>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Nueva lista" Click="MenuFlyoutItem_Click">
                            <MenuFlyoutItem.Tag>
                                <vm:DocumentTypes>ToDo</vm:DocumentTypes>
                            </MenuFlyoutItem.Tag>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Nueva bÃºsqueda" Click="MenuFlyoutItem_Click">
                            <MenuFlyoutItem.Tag>
                                <vm:DocumentTypes>Search</vm:DocumentTypes>
                            </MenuFlyoutItem.Tag>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Text="Nueva carpeta" Click="MenuFlyoutItem_Click"/>
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
        </Grid>
    </Grid>
</UserControl>
