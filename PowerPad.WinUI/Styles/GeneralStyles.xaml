<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary 
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
     xmlns:controls="using:Microsoft.UI.Xaml.Controls" 
     xmlns:primitives="using:Microsoft.UI.Xaml.Controls.Primitives" 
     xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals" 
     xmlns:media="using:Microsoft.UI.Xaml.Media"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:localc="using:PowerPad.WinUI.Components.Controls">

    <ResourceDictionary.MergedDictionaries>
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="localc:IntegratedTextBox" BasedOn="{StaticResource DefaultTextBoxStyle}" />
    <Style TargetType="TextBlock" x:Key="WSTitleStyle" BasedOn="{StaticResource TitleTextBlockStyle}">
        <Style.Setters>
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Margin" Value="16,12,16,4" />
        </Style.Setters>
    </Style>

    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="PowerPadBackgroundBrush" Color="#FF202020" />
            <SolidColorBrush x:Key="PowerPadEditorBrush" Color="#80000000" />

            <SolidColorBrush x:Key="PowerPadStrokeColorDefault" Color="#20FFFFFF" />

            <ImageSource x:Key="OllamaSvg">ms-appx:///Assets/Icons/ollama_w.svg</ImageSource>
            <ImageSource x:Key="GitHubSvg">ms-appx:///Assets/Icons/github_w.svg</ImageSource>
            <ImageSource x:Key="OpenAISvg">ms-appx:///Assets/Icons/openai_w.svg</ImageSource>
            <ImageSource x:Key="HuggingFaceSvg">ms-appx:///Assets/Icons/huggingface_w.svg</ImageSource>
            <ImageSource x:Key="AzureAISvg">ms-appx:///Assets/Icons/azureai_w.svg</ImageSource>
            <ImageSource x:Key="SettingsSvg">ms-appx:///Assets/Icons/settings_w.svg</ImageSource>
            <ImageSource x:Key="SettingsSmallSvg">ms-appx:///Assets/Icons/settings_s_w.svg</ImageSource>
            <ImageSource x:Key="ShowMenuSvg">ms-appx:///Assets/Icons/show_menu_w.svg</ImageSource>
            <ImageSource x:Key="HideMenuSvg">ms-appx:///Assets/Icons/hide_menu_w.svg</ImageSource>
            <ImageSource x:Key="EmptyBoxSvg">ms-appx:///Assets/Icons/empty_box_w.svg</ImageSource>
        </ResourceDictionary>

        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="PowerPadBackgroundBrush" Color="#FFD3D3D3" />
            <SolidColorBrush x:Key="PowerPadEditorBrush" Color="#90FFFFFF" />

            <SolidColorBrush x:Key="PowerPadStrokeColorDefault" Color="#30000000" />

            <ImageSource x:Key="OllamaSvg">ms-appx:///Assets/Icons/ollama_b.svg</ImageSource>
            <ImageSource x:Key="GitHubSvg">ms-appx:///Assets/Icons/github_b.svg</ImageSource>
            <ImageSource x:Key="OpenAISvg">ms-appx:///Assets/Icons/openai_b.svg</ImageSource>
            <ImageSource x:Key="HuggingFaceSvg">ms-appx:///Assets/Icons/huggingface_b.svg</ImageSource>
            <ImageSource x:Key="AzureAISvg">ms-appx:///Assets/Icons/azureai_b.svg</ImageSource>
            <ImageSource x:Key="SettingsSvg">ms-appx:///Assets/Icons/settings_b.svg</ImageSource>
            <ImageSource x:Key="SettingsSmallSvg">ms-appx:///Assets/Icons/settings_s_b.svg</ImageSource>
            <ImageSource x:Key="ShowMenuSvg">ms-appx:///Assets/Icons/show_menu_b.svg</ImageSource>
            <ImageSource x:Key="HideMenuSvg">ms-appx:///Assets/Icons/hide_menu_b.svg</ImageSource>
            <ImageSource x:Key="EmptyBoxSvg">ms-appx:///Assets/Icons/empty_box_b.svg</ImageSource>
        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>