<?xml version="1.0" encoding="utf-8"?>
<local:AIModelsPageBase
    x:Class="PowerPad.WinUI.Pages.Providers.OllamaModelsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PowerPad.WinUI.Pages.Providers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:ai="using:PowerPad.WinUI.ViewModels.AI"
    xmlns:components="using:PowerPad.WinUI.Components"
    xmlns:converters="using:PowerPad.WinUI.Converters"
    xmlns:toolkitconverters="using:CommunityToolkit.WinUI.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource PowerPadEditorColor}">
    <local:AIModelsPageBase.Resources>
        <converters:OllamaStatusOnlineToBoolConverter x:Key="OllamaStatusOnlineToBoolConverter" />
        <converters:OllamaStatusToColorBrushConverter x:Key="OllamaStatusToColorBrushConverter" />
        <converters:OllamaStatusToStringConverter x:Key="OllamaStatusToStringConverter" />
        <toolkitconverters:CollectionVisibilityConverter x:Key="CollectionVisibilityConverter" />
    </local:AIModelsPageBase.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid Margin="36,36,36,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Source="{ThemeResource OllamaSvg}" Width="42" Height="42" Margin="0,0,24,0"/>
            <TextBlock
                Grid.Column="1"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Modelos de Ollama" />
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock Height="32" Margin="0,6,6,-6" Foreground="{ThemeResource TextFillColorSecondaryBrush}">Estado Ollama: </TextBlock>
                <TextBlock 
                    Height="32" 
                    Margin="0,6,0,-6" 
                    Foreground="{x:Bind OllamaModelsViewModel.OllamaStatus, Mode=OneWay, Converter={StaticResource OllamaStatusToColorBrushConverter}}"
                    Text="{x:Bind OllamaModelsViewModel.OllamaStatus, Mode=OneWay, Converter={StaticResource OllamaStatusToStringConverter}}" />
                <Button
                    Height="32"
                    ToolTipService.ToolTip="Refrescar"
                    Margin="12,0,0,0"
                    Command="{x:Bind OllamaModelsViewModel.RefreshModelsCommand}"
                    IsEnabled="{x:Bind OllamaModelsViewModel.OllamaStatus, Mode=OneWay, Converter={StaticResource OllamaStatusOnlineToBoolConverter}}">
                    <Button.Content>
                        <FontIcon Glyph="&#xE72C;" FontSize="14" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <StackPanel 
                Visibility="{x:Bind _modelsViewModel.FilteredModels, Mode=OneWay, Converter={StaticResource CollectionVisibilityConverter}, ConverterParameter=True}"
                Orientation="Vertical" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Center"
                Spacing="8">
                <TextBlock HorizontalAlignment="Center" FontWeight="SemiBold"
                    Text="No hay modelos disponibles" />
                <TextBlock HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Text="Pruebe a revisar la configuraciÃ³n o a instalar nuevos modelos." />
                <FontIcon 
                    Margin="0,28,0,0" FontSize="120" Opacity="0.2"  
                    Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                    Glyph="&#xEA39;" />
            </StackPanel>
            <components:AIModelsRepeater
                Visibility="{x:Bind _modelsViewModel.FilteredModels, Mode=OneWay, Converter={StaticResource CollectionVisibilityConverter}}"
                Models="{x:Bind _modelsViewModel.FilteredModels, Mode=OneWay}"
                DeleteClick="Delete_Click"
                SetDefaultClick="SetDefault_Click" />
        </Grid>
    </Grid>
</local:AIModelsPageBase>